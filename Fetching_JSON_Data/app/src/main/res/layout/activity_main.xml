<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="match_parent"
    tools:context="com.example.ravneet.fetching_json_data.MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/user"
        android:id="@+id/img_user"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER DATA"
        android:textSize="23sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/img_user"
        android:layout_alignEnd="@+id/img_user"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/post"
        android:id="@+id/img_post"
        android:layout_marginEnd="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POSTS"
        android:textSize="23sp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:layout_below="@+id/img_post"
        android:layout_alignStart="@+id/img_post"
        android:layout_alignEnd="@+id/img_post"
        android:layout_alignBottom="@+id/textView" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/album"
        android:id="@+id/img_album"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="107dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALBUM"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/img_todo"
        android:layout_alignEnd="@+id/img_album"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/todo"
        android:id="@+id/img_todo"
        android:layout_alignTop="@+id/img_album"
        android:layout_alignStart="@+id/img_post" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODO Task"
        android:textSize="23sp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:layout_below="@+id/img_todo"
        android:layout_alignEnd="@+id/img_todo"
        android:layout_alignStart="@+id/img_todo"
        android:layout_alignBottom="@+id/textView2" />



</RelativeLayout>
